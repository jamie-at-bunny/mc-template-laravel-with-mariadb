{
    "id": "laravel-mariadb",
    "name": "Laravel + MariaDB",
    "description": "Laravel app with MariaDB, deployed to Magic Containers.",
    "icon": "code",
    "containers": [
        {
            "name": "app",
            "imageNamespace": "{{github.repository_owner}}",
            "imageName": "{{github.repository_name}}",
            "imageTag": "latest",
            "endpoints": [
                {
                    "displayName": "HTTP",
                    "type": "CDN",
                    "containerPort": 80
                }
            ],
            "environment": {
                "DB_CONNECTION": "mariadb",
                "DB_HOST": "db",
                "DB_PORT": "3306",
                "DB_DATABASE": "laravel",
                "DB_USERNAME": "laravel",
                "DB_PASSWORD": "laravel"
            }
        },
        {
            "name": "db",
            "imageNamespace": "library",
            "imageName": "mariadb",
            "imageTag": "11",
            "environment": {
                "MARIADB_DATABASE": "laravel",
                "MARIADB_USER": "laravel",
                "MARIADB_PASSWORD": "laravel",
                "MARIADB_ROOT_PASSWORD": "root"
            },
            "volumes": [
                {
                    "mountPath": "/var/lib/mysql"
                }
            ]
        }
    ]
}
